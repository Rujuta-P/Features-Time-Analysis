<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Start"
            android:layout_width="162dp"
            android:layout_height="80dp"
            android:id="@+id/btnstart" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="176dp" android:textStyle="bold" android:textAlignment="center"
            android:textSize="30sp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="For each question, tick the correct answer."
            android:layout_width="294dp"
            android:layout_height="180dp"
            android:id="@+id/GameView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/btnstart" app:layout_constraintHorizontal_bias="0.495"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="@font/average"
            android:textSize="30sp" android:textStyle="bold" android:textAlignment="center"
            android:gravity="center_horizontal|center_vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>
