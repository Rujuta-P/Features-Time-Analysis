<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="50dp">
    <TextView
            android:text="Question 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/quest3" android:textSize="30sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textAlignment="center" android:fontFamily="@font/average" android:gravity="center"/>
    <TextView
            android:text="Whose wedding party is that?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="center"
            android:gravity="center" android:textSize="24sp" android:fontFamily="@font/average"/>

    <RadioGroup
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

    <RadioButton
            android:text="It's Jack and Jenny's wedding."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/radioButton3.1" android:textSize="18sp"
            android:textAlignment="textStart" android:gravity="center" android:fontFamily="@font/average"
            android:checked="false" android:duplicateParentState="false"
            android:padding="15dp"/>

    <RadioButton
            android:text="It's Jack's and Jenny's wedding."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/radioButton3.2" android:textSize="18sp"
            android:textAlignment="textStart" android:gravity="center" android:fontFamily="@font/average"
            android:padding="15dp"/>
    <RadioButton
            android:text="It's Jacks and Jennys wedding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/radioButton3.3" android:textSize="18sp"
            android:textAlignment="textStart" android:gravity="center" android:fontFamily="@font/average"
            android:padding="15dp"/>
    </RadioGroup>

    <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnnext3" android:textSize="24sp"
            android:fontFamily="@font/average"
            android:padding="15dp"/>

</LinearLayout>
